name: Show Commit Info

on:
  push:
    branches:
      - '**'

jobs:
  show-commit:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Write Commit Info to Summary
        run: |
          echo "### âœ… Commit Information" >> $GITHUB_STEP_SUMMARY
          echo "- ðŸ‘¤ Author: $(git log -1 --pretty=format:'%an')" >> $GITHUB_STEP_SUMMARY
          echo "- ðŸ”¢ Commit ID: $(git log -1 --pretty=format:'%h')" >> $GITHUB_STEP_SUMMARY
          echo "- ðŸ“ Message: $(git log -1 --pretty=format:'%s')" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "#### ðŸ“„ Files Changed:" >> $GITHUB_STEP_SUMMARY
          git diff-tree --no-commit-id --name-only -r HEAD >> $GITHUB_STEP_SUMMARY
